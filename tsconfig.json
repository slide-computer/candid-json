{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2020"
    ],
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
